<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border Padding="10">
        <StackPanel Margin="0.4,0.4,-0.8,-0.4" RenderTransformOrigin="0.261,0.509">
            
            <StackPanel>

                <Button Grid.Column="0"  Content="Sign in" Margin="10 70 0 0" Click="Sign_in_button_click" Height="50" Width="200"/>
                <Button x:Name="Sign_up_button"   Grid.Column="1"  Content="Sign up" Margin="10,50,10,0" Click="Sign_up_button_click" Height="50" Width="200"/>
                <Button Grid.Column="2"  Content="Exit" Margin="10,50,10,0" Click="exit_click" Height="50" Width="200"/>

            </StackPanel>

        </StackPanel>
    </Border>
</Window>
